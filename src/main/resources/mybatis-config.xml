<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC
"-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
		<setting name="cacheEnabled" value="false"/>
	</settings>

	<!-- 매퍼에서 사용할 vo 클래스에 대한 줄임말 선언 -->
	<typeAliases>
		<typeAlias type="org.team404.gameOjirap.user.model.vo.User" alias="User" />
		<typeAlias type="org.team404.gameOjirap.user.model.vo.MyPage" alias="MyPage" />
		<typeAlias type="org.team404.gameOjirap.user.model.vo.HotList" alias="HotList" />
	</typeAliases>
	
	<!-- mapper : 실행할 쿼리문만 별도로 작성하는 파일을 말함 -->
	<mappers>
		<mapper resource="mappers/user-mapper.xml" />
	</mappers>
</configuration>
